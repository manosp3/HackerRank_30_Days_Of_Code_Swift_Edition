//Day 2: Operators

//my custom inputs
let meal_cost: Double = 10.25
let tip_percent = 17
let tax_percent = 5


func solve(meal_cost: Double, tip_percent: Int, tax_percent: Int) {
    let tax = meal_cost * Double(tax_percent) / 100.0
    let tip = meal_cost * Double(tip_percent) / 100.0
    let totalCost = meal_cost + tip + tax
    print("The total meal cost is \(Int(totalCost)) dollars.")
}

solve(meal_cost: meal_cost, tip_percent: tip_percent, tax_percent: tax_percent)
